import cv2
import numpy as np
import matplotlib.pyplot as plt
img = cv2.imread("panda.png")   # use your file name
rows, cols = img.shape[:2]
M = np.float32([[1,0,100],[0,1,50]])   # move right 100, down 50
moved = cv2.warpAffine(img, M, (cols, rows))
plt.subplot(1,2,1)
plt.imshow(cv2.cvtColor(img, cv2.COLOR_BGR2RGB))
plt.title("Original"); plt.axis("off")
plt.subplot(1,2,2)
plt.imshow(cv2.cvtColor(moved, cv2.COLOR_BGR2RGB))
plt.title("Moved"); plt.axis("off")
plt.show()
