import cv2
import matplotlib.pyplot as plt
img = cv2.imread("matrix.png")   # use your file name
# Check if image was loaded successfully
if img is None:
    print("Error: Image not loaded. Please check the file name and path.")
else:
    clock = cv2.rotate(img, cv2.ROTATE_90_CLOCKWISE)
    anticlock = cv2.rotate(img, cv2.ROTATE_90_COUNTERCLOCKWISE)
    plt.subplot(1,3,1)
    plt.imshow(cv2.cvtColor(img, cv2.COLOR_BGR2RGB))
    plt.title("Original"); plt.axis("off")
    plt.subplot(1,3,2)
    plt.imshow(cv2.cvtColor(clock, cv2.COLOR_BGR2RGB))
    plt.title("Clockwise"); plt.axis("off")
    plt.subplot(1,3,3)
    plt.imshow(cv2.cvtColor(anticlock, cv2.COLOR_BGR2RGB))
    plt.title("Anti-clockwise"); plt.axis("off")
    plt.show()
