import cv2
import matplotlib.pyplot as plt
img = cv2.imread("car.png")   # use your file name
gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)
blur = cv2.GaussianBlur(gray, (5,5), 0)
mask = cv2.subtract(gray, blur)
k = 2   # high-boost factor (>1)
highboost = cv2.add(gray, k*mask)
plt.subplot(1,3,1)
plt.imshow(gray, cmap='gray')
plt.title("Original"); plt.axis("off")
plt.subplot(1,3,2)
plt.imshow(mask, cmap='gray')
plt.title("Mask"); plt.axis("off")
plt.subplot(1,3,3)
plt.imshow(highboost, cmap='gray')
plt.title("High-Boost"); plt.axis("off")
plt.show()
