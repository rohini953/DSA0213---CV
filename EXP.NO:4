import cv2
import matplotlib.pyplot as plt
img = cv2.imread("teddy.png")   # use your file name
# Check if image was loaded successfully
if img is None:
    print("Error: Image not loaded. Please check the file name and path.")
else:
    big = cv2.resize(img, None, fx=2, fy=2)      # bigger
    small = cv2.resize(img, None, fx=0.5, fy=0.5)  # smaller
    plt.subplot(1,3,1)
    plt.imshow(cv2.cvtColor(img, cv2.COLOR_BGR2RGB))
    plt.title("Original"); plt.axis("off")
    plt.subplot(1,3,2)
    plt.imshow(cv2.cvtColor(big, cv2.COLOR_BGR2RGB))
    plt.title("Bigger"); plt.axis("off")
    plt.subplot(1,3,3)
    plt.imshow(cv2.cvtColor(small, cv2.COLOR_BGR2RGB))
    plt.title("Smaller"); plt.axis("off")
    plt.show()
